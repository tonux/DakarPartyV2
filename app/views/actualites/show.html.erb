<%- model_class = Actualite -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">

  <dd><%= image_tag(@actualite.picture_url, :width => 600) if @actualite.picture.present? %></dd>
  <dd><%= @actualite.titleActu %></dd>
  <dd><%= @actualite.contenu %></dd>
  <% category =CategoryActu.find_by_id(@actualite.categoryActu_id) %>
  <dd><%= category.titleCategory %></dd>
</dl>

<% if user_signed_in? and (current_user.admin? || current_user.adminActu?) %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              actualites_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_actualite_path(@actualite), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              actualite_path(@actualite),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<% end %>
