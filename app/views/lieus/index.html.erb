<%- model_class = Lieu -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nomLieu) %></th>
      <th><%= model_class.human_attribute_name(:NomRegion) %></th>
      <th><%= model_class.human_attribute_name(:descLieu) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lieus.each do |lieu| %>
      <tr>
        <td><%= link_to lieu.id, lieu_path(lieu) %></td>
        <td><%= lieu.nomLieu %></td>
        <td><%= lieu.NomRegion %></td>
        <td><%= lieu.descLieu %></td>
        <td><%=l lieu.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lieu_path(lieu), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lieu_path(lieu),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lieu_path,
            :class => 'btn btn-primary' %>
