<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:Titre) %></th>
      <th><%= model_class.human_attribute_name(:Description) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:structure) %></th>
      <th><%= model_class.human_attribute_name(:lieu) %></th>
      
      <th><%= model_class.human_attribute_name(:Heure) %></th>
      <th><%=t '.modifier', :default => t("helpers.actions") %></th>
      <th><%=t '.supprimer', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
     <%lieu=Lieu.find_by_id(event.lieu_id)%>
     <% structure=Structure.find_by_id(event.structure_id)%>
     <% category=CategoryEvent.find_by_id(event.categoryEvent_id)%>
      <tr>
        <td><%= link_to image_tag(event.picture_url, :width => 240, :height => 120),event_path(event) if event.picture.present? %></td>
        <td><%= event.titleEvent %></td>
        <td><%= event.descEvent %></td>
        <td><%= event.date_debut %></td>
        <td><%= category.titleCategory %></td>
        <td><%= structure.nomStructure %></td>
        <td><%= lieu.nomLieu %></td>
        
        <td><%= event.heure_debut.hour %>H : <%= event.heure_debut.min %> </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_event_path(event), :class => 'btn btn-mini' %>
          
        </td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      event_path(event),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_path,
            :class => 'btn btn-primary' %>
