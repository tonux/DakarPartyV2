<div class="row-fluid" style="">
  <div class="span9" style="width:73%">
<%- model_class = User -%>

<div class="hero-unit">
    <h1><dd>Profil de <%= @user.login %></dd></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:login) %>:</strong></dt>
  <dd><%= @user.login %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nom) %>:</strong></dt>
  <dd><%= @user.nom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prenom) %>:</strong></dt>
  <dd><%= @user.prenom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:datenaiss) %>:</strong></dt>
  <dd><%= @user.datenaiss %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adresse) %>:</strong></dt>
  <dd><%= @user.adresse %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admin) %>:</strong></dt>
  <dd><%=raw @user.admin ?  "Oui" :  "Non" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adminActu) %>:</strong></dt>
  <dd><%=raw @user.adminActu ?  "Oui" :  "Non"%></dd>
  <dt><strong><%= model_class.human_attribute_name(:adminEvent) %>:</strong></dt>
  <dd><%=raw  @user.adminEvent ?  "Oui" :  "Non" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sexe) %>:</strong></dt>
  <dd><%=raw @user.sexe ? "Gar&ccedil;on" : "Fille" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
  <dd><%= @user.telephone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>

<%= render :partial => 'home/nav_actu' %>
</div>