<%- model_class = Actualite -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:titleActu) %></th>
      <th><%= model_class.human_attribute_name(:contenu) %></th>
      <th><%= model_class.human_attribute_name(:categoryActu_id) %></th>
      <th><%= model_class.human_attribute_name(:créé) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>

    </tr>
  </thead>
  <tbody>
    <% @actualites.each do |actualite| %>
      <tr>
        <td><%= link_to  image_tag(actualite.picture_url, :height => 100, :width => 200), actualite_path(actualite) if actualite.picture.present?%></td>
        <td><%= actualite.titleActu %></td>
        <td><%= actualite.contenu %></td>
        <% category =CategoryActu.find_by_id(actualite.categoryActu_id) %>

        <td><%= category.titleCategory %></td>
        <td><%= actualite.created_at.to_date.strftime(" %d %B %Y ") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_actualite_path(actualite), :class => 'btn btn-mini' %>
        </td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      actualite_path(actualite),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_actualite_path,
            :class => 'btn btn-primary' %>
